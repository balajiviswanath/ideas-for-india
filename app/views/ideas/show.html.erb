
  <h1>My big idea: <%= @idea.title %></h1>

<div class="row">
  <div class="col-lg-3">
    Project Owner: <%=  link_to @project_owner.name, controller: "users", action: "show", id: @project_owner %>
  <br> Category: <%= link_to @category.name, controller: "categories", action: "show", id: @category %>
  <br> <%= @idea.description %>
  <p> <%= raw(youtube_embed( @idea.video_url, 250, 200)) %> </p>

  </div>
  <div id="ideafeed" class="col-lg-6">
    
    <%= 
    render 'posts/form' 
    %>
    <br>
    <%= 
    #render 'shared/paginate', resources: @activities 
    %>
  </div>
  <div class="col-lg-3">
    <%= 
    #render 'shared/links' 
    %>
    
    <%= link_to support_idea_path(@idea), method: :put do %>
        Supports for this idea
        <%= @idea.get_upvotes.size %>
    <% end %>
  </div>
</div>
