<%= form_for(@idea) do |f| %>
  <% if @idea.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@idea.errors.count, "error") %> prohibited this idea from being saved:</h2>

      <ul>
      <% @idea.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br>
      <div class="input-group">
           <span class="input-group-addon input-circle-left"> <i class="fa fa-envelope"></i> </span>
           <%= f.text_field :title, class: 'form-control input-circle-right"', placeholder: 'provide an interesting name' %>
      </div>
  </div>
  <div class="field">
    <%= f.label :description %><br>
     <div class="input-group">
           <span class="input-group-addon input-circle-left"> <i class="fa fa-user"></i> </span>
           <%= f.text_field :title, class: 'form-control input-circle-right"', placeholder: 'what have you built or building?' %>
      </div>
  
  </div>
  <div class="field">
    <%= f.label :video_url %><br>
    <%= f.text_field :video_url, class: 'form-control', placeholder: 'upload a 60 sec video of what you have built or planning to build and paste the youtube url here' %>
  </div>
  <div>
    <%=  f.collection_select(:category_id,Category.all,:id, :name, {prompt: "Choose your category"}) %>
  </div>
  <br>
   <div class="actions">
    <%= f.submit "Here is my cool idea", class: 'btn big btn-success' %>
  </div>
<% end %>
