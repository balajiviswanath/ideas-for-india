<h1>User profile of <%= @user.name %></h1>
<% title @user.name %>
<%= 
#image_tag(@user.avatar.url) 
%>
<%= @user.about %>
<% if current_user == @user %>
    <%=link_to "Edit my profile", edit_user_registration_path %>
<% end %>
<br>
<h2>Ideas working on</h2>
<% @ideas.each_slice(3) do |ideas| %>
  <div class="row">
    <% ideas.each do |idea| %>
      <div class="col-md-4">
         <h3><%= link_to idea.title, controller: "ideas", action: "show", id: idea.id %></h3> 
         <%= raw(youtube_embed( idea.video_url,350,200)) %> 
      </div>
    <% end %>
  </div>
<% end %>

<h2>Ideas commented on</h2>
<% @ideas_comment.each_slice(3) do |ideas| %>
  <div class="row">
    <% ideas.each do |key,idea| %>
      <div class="col-md-4">
          <h3><%= link_to idea.title, controller: "ideas", action: "show", id: idea.id %></h3> 
         <%= raw(youtube_embed( idea.video_url,350,200)) %> 
        
      </div>
    <% end %>
  </div>
<% end %>
